@using EPiServer.Framework.Web.Resources
@{
    Layout = "~/Views/Shared/Layouts/_ShellLayout.cshtml";
}

@section Styles
{
<style type="text/css">
    html,
    body {
        height: 100%;
    }
    body {
        background-color: #fff;
    }
    .container {
        padding: 16px;
        border-top: 1px solid #D6D6D6;
    }
    .container label {
        display: block;
        margin-bottom: 16px;
    }
    .container input {
        margin-left: 8px;
    }
    .container span {
        display: inline-block;
        width: 100px;
    }
    .container h1 {
        margin-bottom: 32px;
    }
</style>
}

<div>
    <div class="container">
        <h1>Generate content</h1>
        <div>
            <div id="result"></div>
            <label><span>Root id</span><input class="formValue" name="root" type="text" value="5" /></label>
            <label><span>Count</span><input class="formValue" name="count" type="number" value="10" /></label>
            <label><span>Truncate parent</span><input class="formValue" name="truncateParent" type="checkbox" value="false" /></label>
            <label><span>Generate images</span><input class="formValue" name="generateImages" type="checkbox" value="false" /></label>
            <button class="mdc-ripple-upgraded epi-uif-text-button mdc-button mdc-button--unelevated" onclick="onGenerateContent()">
                <span>Test</span>
            </button>
        </div>
    </div>
</div>

@section Scripts
{
<script>
    function onGenerateContent()
    {
        alert('Test');
    }
</script>
}
