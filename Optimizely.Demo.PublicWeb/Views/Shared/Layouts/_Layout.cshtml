@using Optimizely.Demo.Core.Models.ViewModels;
@model IPageViewModel<PageBasePublic>
@{
    Layout = "~/Views/Shared/Layouts/_LayoutBase.cshtml";
}

@section Metadata
{
    @{ await Html.RenderPartialAsync("_MetaData", Model.Layout); }
}
@section HeaderStyles
{
    @{ await Html.RenderPartialAsync("_NameValueStringDefinition", Model.Layout.HeaderStyles); }
}
@section HeaderScripts
{
    @{ await Html.RenderPartialAsync("_NameValueStringDefinition", Model.Layout.HeaderScripts); }
}
@section Header
{
    @{ await Html.RenderPartialAsync("_Header", Model); }
}

@RenderBody()

@section BodyScripts
{
    @{ await Html.RenderPartialAsync("_NameValueStringDefinition", Model.Layout.BodyScripts); }
}

@section Footer
{
    @{ await Html.RenderPartialAsync("_Footer", Model); }
}

@section FooterScripts
{
    @{ await Html.RenderPartialAsync("_NameValueStringDefinition", Model.Layout.FooterScripts); }
}
@section AdditionalScripts
{ 
    @RenderSection("AdditionalScripts", false)
}